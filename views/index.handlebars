<h1>Eat-Yo-Burgers!</h1>

<h2>Burgers To Eat</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    {{id}}.
    {{burger_name}}

    <button class="devour-button" data-id="{{id}}">
      DEVOUR!
    </button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>{{id}}.{{burger_name}}</li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="create-burger">Burger Name:</label>
    <input type="text" id="create-burger">
  </div>

  <button type="submit">Add Burger</button>
</form>